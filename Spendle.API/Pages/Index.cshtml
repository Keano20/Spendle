@page
@model Spendle.API.Pages.Index

@{
    ViewData["Title"] = "Home - Spendle";
}

<section style="text-align:center; margin-top:100px;">
    <h1>Welcome to Spendle</h1>

    @if (Model.LoggedEmail is not null)
    {
        <p>Youâ€™re logged in as <strong>@Model.LoggedEmail</strong></p>
        <form method="post" action="/Logout">
            <button type="submit" class="btn">Logout</button>
        </form>
    }
    else
    {
        <p><a href="/Login" class="btn">Login</a> or <a href="/Signup" class="btn">Sign Up</a></p>
    }
</section>

<style>
    body {
        font-family: system-ui, sans-serif;
        background-color: #f3f3f4;
        color: #363635;
    }
    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 10px;
        background-color: #00BFB2;
        color: white;
        text-decoration: none;
        border-radius: 6px;
    }
    .btn:hover {
        background-color: #009e93;
    }
</style>