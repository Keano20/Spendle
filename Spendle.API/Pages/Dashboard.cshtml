@page
@model Spendle.API.Pages.Dashboard
@{
    ViewData["Title"] = "Dashboard - Spendle";
}

<section class="dashboard-container">
    <h1>Welcome back, @Model.Username!</h1>
    <p class="subtitle">Here’s a quick overview of your finances.</p>

    <div class="dashboard-grid">
        <div class="card">
            <h2>Total Balance</h2>
            <p class="value">£0.00</p>
            <p class="note">Your combined income and expenses will appear here.</p>
        </div>

        <div class="card">
            <h2>Recent Activity</h2>
            <p>No recent transactions yet.</p>
            <a href="/Income" class="link">Add new income</a> |
            <a href="/Expenses" class="link">Add expense</a>
        </div>

        <div class="card">
            <h2>Goals & Insights</h2>
            <p>Track your progress toward savings and spending goals.</p>
            <a href="#" class="link">Set up a goal</a>
        </div>
    </div>

    <div class="actions">
        <a href="/Logout" class="btn logout">Logout</a>
    </div>
</section>

<style>
    body {
        font-family: system-ui, sans-serif;
        background: #f3f3f4;
        color: #363635;
        margin: 0;
        padding: 0;
    }

    .dashboard-container {
        text-align: center;
        padding: 60px 20px;
        max-width: 1000px;
        margin: 0 auto;
    }

    h1 {
        color: #00BFB2;
        margin-bottom: 10px;
    }

    .subtitle {
        color: #5c5c5c;
        margin-bottom: 40px;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .card {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        text-align: left;
    }

    .card h2 {
        margin-top: 0;
        color: #00BFB2;
    }

    .value {
        font-size: 2em;
        margin: 10px 0;
    }

    .note {
        color: #888;
        font-size: 0.9em;
    }

    .link {
        color: #00BFB2;
        text-decoration: none;
    }

    .link:hover {
        text-decoration: underline;
    }

    .btn.logout {
        background-color: #363635;
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
    }

    .btn.logout:hover {
        background-color: #00BFB2;
    }
</style>